{
	"name": "wdykam",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"prepare": "husky",
		"dev": "vite dev",
		"dev:host": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"verify": "pnpm format && pnpm check && pnpm lint",
		"pocketbase:typegen": "npx pocketbase-typegen --env -o ./src/lib/types/pocketbase/index.ts",
		"pocketbase:migrate": "docker compose exec -w /pb wdykam-pocketbase ./pocketbase migrate create",
		"pocketbase:migrate:up": "docker compose exec -w /pb wdykam-pocketbase ./pocketbase migrate up",
		"pocketbase:migrate:down": "docker compose exec -w /pb wdykam-pocketbase ./pocketbase migrate down",
		"pocketbase:migrate:collections": "docker compose exec -w /pb wdykam-pocketbase ./pocketbase migrate collections",
		"docker:start": "docker compose up -d --build",
		"docker:start:pocketbase": "docker compose up -d --build wdykam-pocketbase",
		"docker:build": "docker compose build",
		"docker:build:pocketbase": "docker compose build wdykam-pocketbase",
		"docker:restart": "docker compose restart",
		"docker:restart:pocketbase": "docker compose restart wdykam-pocketbase",
		"docker:stop": "docker compose stop",
		"docker:stop:pocketbase": "docker compose stop wdykam-pocketbase",
		"docker:down": "docker compose down",
		"docker:down:pocketbase": "docker compose down wdykam-pocketbase",
		"docker:logs": "docker compose logs -f",
		"docker:logs:pocketbase": "docker compose logs -f wdykam-pocketbase",
		"docker:prune": "docker system prune --all --volumes --force"
	},
	"devDependencies": {
		"@castlenine/svelte-qrcode": "^2.3.0",
		"@eslint/compat": "^1.2.3",
		"@fontsource/poppins": "^5.1.0",
		"@steeze-ui/svelte-icon": "^1.6.2",
		"@steeze-ui/tabler-icons": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svoast": "^3.0.3",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"pocketbase": "^0.22.1"
	}
}
