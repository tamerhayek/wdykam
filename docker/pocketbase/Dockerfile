FROM alpine:latest

ARG PB_VERSION=0.23.4
ARG TARGETARCH

ARG PB_APP_NAME
ARG PB_APP_URL
ARG PB_ENCRYPTION_KEY
ARG PB_SMTP_ENABLED
ARG PB_SMTP_HOST
ARG PB_SMTP_PORT
ARG PB_SMTP_USERNAME
ARG PB_SMTP_PASSWORD
ARG PB_SMTP_SENDER_NAME
ARG PB_SMTP_SENDER_ADDRESS
ARG PB_S3_ENABLED
ARG PB_S3_ENDPOINT
ARG PB_S3_BUCKET
ARG PB_S3_REGION
ARG PB_S3_ACCESS_KEY
ARG PB_S3_SECRET_ACCESS_KEY
ARG PB_S3_FORCE_PATH_STYLE
ARG PB_BACKUPS_CRON
ARG PB_BACKUPS_CRON_MAX_KEEP
ARG PB_BACKUPS_S3_ENABLED
ARG PB_BACKUPS_S3_ENDPOINT
ARG PB_BACKUPS_S3_BUCKET
ARG PB_BACKUPS_S3_REGION
ARG PB_BACKUPS_S3_ACCESS_KEY
ARG PB_BACKUPS_S3_SECRET_ACCESS_KEY
ARG PB_BACKUPS_S3_FORCE_PATH_STYLE
ARG PB_LOGS_IP_ENABLED
ARG PB_LOGS_MAX_DAYS
ARG PB_LOGS_MIN_LEVEL
ARG PB_ADMIN_EMAIL
ARG PB_ADMIN_PASSWORD

ENV PB_APP_NAME ${PB_APP_NAME}
ENV PB_APP_URL ${PB_APP_URL}
ENV PB_ENCRYPTION_KEY ${PB_ENCRYPTION_KEY}
ENV PB_SMTP_ENABLED ${PB_SMTP_ENABLED}
ENV PB_SMTP_HOST ${PB_SMTP_HOST}
ENV PB_SMTP_PORT ${PB_SMTP_PORT}
ENV PB_SMTP_USERNAME ${PB_SMTP_USERNAME}
ENV PB_SMTP_PASSWORD ${PB_SMTP_PASSWORD}
ENV PB_SMTP_SENDER_NAME ${PB_SMTP_SENDER_NAME}
ENV PB_SMTP_SENDER_ADDRESS ${PB_SMTP_SENDER_ADDRESS}
ENV PB_S3_ENABLED ${PB_S3_ENABLED}
ENV PB_S3_ENDPOINT ${PB_S3_ENDPOINT}
ENV PB_S3_BUCKET ${PB_S3_BUCKET}
ENV PB_S3_REGION ${PB_S3_REGION}
ENV PB_S3_ACCESS_KEY ${PB_S3_ACCESS_KEY}
ENV PB_S3_SECRET_ACCESS_KEY ${PB_S3_SECRET_ACCESS_KEY}
ENV PB_S3_FORCE_PATH_STYLE ${PB_S3_FORCE_PATH_STYLE}
ENV PB_BACKUPS_CRON ${PB_BACKUPS_CRON}
ENV PB_BACKUPS_CRON_MAX_KEEP ${PB_BACKUPS_CRON_MAX_KEEP}
ENV PB_BACKUPS_S3_ENABLED ${PB_BACKUPS_S3_ENABLED}
ENV PB_BACKUPS_S3_ENDPOINT ${PB_BACKUPS_S3_ENDPOINT}
ENV PB_BACKUPS_S3_BUCKET ${PB_BACKUPS_S3_BUCKET}
ENV PB_BACKUPS_S3_REGION ${PB_BACKUPS_S3_REGION}
ENV PB_BACKUPS_S3_ACCESS_KEY ${PB_BACKUPS_S3_ACCESS_KEY}
ENV PB_BACKUPS_S3_SECRET_ACCESS_KEY ${PB_BACKUPS_S3_SECRET_ACCESS_KEY}
ENV PB_BACKUPS_S3_FORCE_PATH_STYLE ${PB_BACKUPS_S3_FORCE_PATH_STYLE}
ENV PB_LOGS_IP_ENABLED ${PB_LOGS_IP_ENABLED}
ENV PB_LOGS_MAX_DAYS ${PB_LOGS_MAX_DAYS}
ENV PB_LOGS_MIN_LEVEL ${PB_LOGS_MIN_LEVEL}
ENV PB_ADMIN_EMAIL ${PB_ADMIN_EMAIL}
ENV PB_ADMIN_PASSWORD ${PB_ADMIN_PASSWORD}

RUN apk add --no-cache \
	unzip \
	ca-certificates

ADD https://github.com/pocketbase/pocketbase/releases/download/v${PB_VERSION}/pocketbase_${PB_VERSION}_linux_${TARGETARCH}.zip /tmp/pb.zip
RUN unzip /tmp/pb.zip -d /pb/

EXPOSE 8080

CMD ["/pb/pocketbase", "serve", "--http=0.0.0.0:8080", "--encryptionEnv=${PB_ENCRYPTION_KEY}"]